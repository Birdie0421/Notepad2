<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.fjnu.birdie.notepad2.Login_Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_id"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/login_pwd" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_pwd"
        android:layout_below="@+id/login_id"
        android:layout_alignStart="@+id/login" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toEndOf="@+id/inputPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/register"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/login_pwd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:id="@+id/forgetpwd"

        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/checkBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:id="@+id/updatepwd"
        android:layout_below="@+id/forgetpwd"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐号："
        android:id="@+id/inputUsername"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/login_id"
        android:layout_alignTop="@+id/login_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="16dp"
        android:id="@+id/inputPassword"
        android:gravity="center"
        android:layout_alignBaseline="@+id/login_pwd"
        android:layout_alignBottom="@+id/login_pwd"
        android:layout_alignParentStart="true" />

</RelativeLayout>
